{
	"name": "clover",
	"displayName": "Clover",
	"description": "Socket REPL development for your editor",
	"publisher": "mauricioszabo",
	"repository": "https://github.com/mauricioszabo/clover/",
	"version": "0.1.0",
	"engines": {
		"vscode": "^1.38.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:clojure",
		"workspaceContains:**/project.clj",
		"workspaceContains:**/shadow-cljs.edn",
		"workspaceContains:**/deps.edn",
		"onCommand:extension.connectSocketRepl"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.connectSocketRepl",
				"title": "Connect Socket REPL"
			},
			{
				"command": "clover.evaluate-block",
				"title": "Evaluate current block of code"
			},
			{
				"command": "clover.evaluate-top-block",
				"title": "Evaluate current top-block of code"
			},
			{
				"command": "clover.evaluate-selection",
				"title": "Evaluate current selection of code"
			},
			{
				"command": "clover.clear-console",
				"title": "Clear Clojure console"
			},
			{
				"command": "clover.disconnect",
				"title": "Disconnect all REPLs"
			},
			{
				"command": "clover.load-file",
				"title": "Load File in current REPL"
			},
			{
				"command": "clover.break-evaluation",
				"title": "Break Clojure Evaluation"
			},
			{
				"command": "clover.doc-for-var",
				"title": "Show Documentation for Var"
			},
			{
				"command": "clover.run-tests-in-ns",
				"title": "Run all tests in current namespace"
			},
			{
				"command": "clover.run-test-for-var",
				"title": "Run test for the current var"
			},
			{
				"command": "clover.source-for-var",
				"title": "Show source for the current var"
			},
			{
				"command": "clover.connect-embedded",
				"title": "Start Shadow-CLJS' ClojureScript REPL"
			}
		],
		"languages": [
			{
				"id": "clojure",
				"aliases": [
					"Clojure",
					"clojure"
				],
				"extensions": [
					".clj",
					".bb",
					".cljs",
					".cljc",
					".cljx",
					".clojure",
					".edn",
					".joke",
					".boot"
				]
			}
		],
		"grammars": [
			{
				"language": "clojure",
				"scopeName": "source.clojure",
				"path": "./clojure.tmLanguage.json"
			}
		],
    "configuration": [
      {
        "type": "object",
        "title": "Clover",
        "properties": {
          "clover.experimental": {
            "type": "boolean",
            "description": "Enable experimental, and possible unstable, features?",
            "default": false
          },
          "clover.repl": {
            "type": "string",
            "description": "Should we evaluate Clojure, or ClojureScript?",
            "default": "prefer-clj",
            "enum": [
              "prefer-clj",
              "prefer-cljs",
              "clj",
              "cljs"
            ]
          }
        }
	    }
    ],
		"configurationDefaults": {
			"[clojure]": {
				"editor.wordSeparators": "\t ()\"':,;~@#$%^&{}[]`",
				"editor.autoClosingBrackets": "always",
				"editor.autoClosingQuotes": "always",
				"editor.formatOnType": true,
				"editor.autoIndent": "advanced",
				"editor.formatOnPaste": true,
				"files.trimTrailingWhitespace": false,
				"editor.matchBrackets": "near"
			}
		}
	},
	"devDependencies": {
		"bufferutil": "^4.0.1",
		"shadow-cljs": "^2.10.13",
		"utf-8-validate": "^5.0.2"
	},
	"dependencies": {
		"ansi_up": "^4.0.4",
		"create-react-class": "^15.6.3",
		"react": "^16.13.1",
		"react-dom": "^16.13.1"
	},
	"__metadata": {
		"id": "46228898-6f2d-4345-b0a1-110cecdc9866",
		"publisherDisplayName": "Maur√≠cio Szabo",
		"publisherId": "5954deb7-f27b-4b00-8b5b-22970a2bc859"
	}
}
